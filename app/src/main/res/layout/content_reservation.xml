<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Reservation"
    tools:showIn="@layout/activity_reservation"
    android:orientation="vertical"
    android:background="@drawable/bbb">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagbanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:padding="10dp"
        android:src="@drawable/bankcairo_1"/>

        <TextView
            android:id="@+id/txtdate_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:padding="10dp"
            android:gravity="center"
            android:hint="Date Reservation"
            android:inputType="date"
            android:textColor="#ffffff"
            android:textColorHint="#FFA8A8A8" />

    <TextView
            android:id="@+id/txtreservation_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="0"
            android:padding="10dp"
            android:gravity="center"
            android:hint="Reservation Time"
            android:inputType="time"
            android:textColor="#ffffff"
            android:textColorHint="#FFA8A8A8" />

        <EditText
            android:id="@+id/txtnotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="0"
            android:gravity="center"
            android:hint="Notes"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textColorHint="#FFA8A8A8" />

        <Button
            android:id="@+id/btn_send_the_request"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="40dp"
            android:layout_weight="0"
            android:background="@drawable/bouttonshape"
            android:clickable="true"
            android:text="Send The Request"
            android:textAllCaps="false"
            android:textColor="#8bc43f"
            android:textSize="18sp" />


</LinearLayout>


