<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bbb"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagbank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/bankcairo_1"/>

    <TextView
        android:id="@+id/txtnamebank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="40dp"
        android:layout_weight="0"
        android:gravity="center"
        android:padding="8dp"
        android:text="Name Bank"
        android:textColor="#ffffff"
        android:textColorHint="#FFA8A8A8" />

    <TextView
        android:id="@+id/txtemail_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_weight="0"
        android:gravity="center"
        android:padding="8dp"
        android:text="Email Bank"
        android:textColor="#ffffff"
        android:textColorHint="#FFA8A8A8" />

    <TextView
        android:id="@+id/txtphone_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_weight="0"
        android:gravity="center"
        android:inputType="phone"
        android:padding="8dp"
        android:text="Phone Bank"
        android:textColor="#ffffff"
        android:textColorHint="#FFA8A8A8" />

    <TextView
        android:id="@+id/txtbank_datails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_weight="0"
        android:gravity="center"
        android:padding="8dp"
        android:text="Bank Datails"
        android:textColor="#ffffff"
        android:textColorHint="#FFA8A8A8" />

    <Button
        android:id="@+id/btnbranches"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:layout_weight="0"
        android:background="@drawable/bouttonshape"
        android:clickable="true"
        android:text="Branches"
        android:textAllCaps="false"
        android:textColor="#8bc43f"
        android:textSize="18sp" />

</LinearLayout>